    android:id="@+id/home"
    app:startDestination="@+id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="com.example.intell.fragment.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
